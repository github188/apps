#! /bin/sh
#
# reassume md devices

### BEGIN INIT INFO
# Provides:          jw-assemble
# Required-Start:    jw-apps
# Required-Stop:
# Default-Start:     2
# Default-Stop:      0 1 6
# Short-Description: drivers for jwele
# Description:       same with above.
### END INIT INFO

. /usr/local/lib/jw-functions

export "PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin"

_usage()
{
	echo "Usage: $(basename "$0")  {start}"
}

start_md()
{
	sys-manager vg --load-sync-prio >/dev/null
	/usr/local/bin/md-assume.sh
}

stop_md()
{
	:
}

start_scst()
{
	modprobe scst
	modprobe scst_vdisk
	modprobe iscsi-scst
	iscsi-scstd
	if [ $? -eq 0 ]; then
		sys-manager iscsi --misc --restore-cfg | awk -F':' '{ print $NF }' | sed 's/^ //'| tr -d '}"!'
	fi
}

stop_scst()
{
	while true
	do
		killall iscsi-scstd 2>/dev/null
		if [ $? -ne 0 ]; then
			break;
		fi
		sleep 1
	done
	rmmod scst_vdisk
	rmmod iscsi-scst
	rmmod scst
}

start_nas()
{
	sys-manager nas --misc --restore-cfg | awk -F':' '{ print $NF }' | sed 's/^ //' | tr -d '}"!'
}

stop_nas()
{
	:
}

case "${1:-}" in
	start)
		start_md
		start_scst
		start_nas
	;;
	stop)
		stop_nas
		stop_scst
		stop_md	
	;;
	*)
		_usage
	;;
esac

exit 0

#!/usr/bin/env python

import sys
from libmd import *

# args [0]  - self
#      [1]  - dev eg. /dev/md1
#      [2]  - action 'add', 'remove', 'change'

def main():
	if len(sys.argv) < 3:
		return

	action = sys.argv[2]
	if 'add' == action:
		update_md_info(mddev)
	elif 'remove' == action:
		remove_md_info(mddev)

if __name__ == "__main__":
    main()
